<Window x:Class="MiniCompilador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Compilador - SVG by Numbers (C#)"
        Width="1200" Height="750"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <DockPanel Grid.ColumnSpan="2" LastChildFill="False" Margin="0,0,0,5">
            <TextBlock Text="🧩 Mini Compilador SVG by Numbers" 
                       FontSize="18" Foreground="White" FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            <Button x:Name="btnCompile" 
                    Content="Compilar"
                    Background="#007ACC" Foreground="White"
                    FontWeight="Bold" Margin="20,0,0,0"
                    Padding="15,5"
                    Cursor="Hand"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- Editor de Código -->
        <Border Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" 
                BorderBrush="#444" BorderThickness="1" CornerRadius="8" Background="#252526">
            <DockPanel>
                <TextBlock Text="Código Fuente" Foreground="#9CDCFE" FontWeight="Bold"
                           Margin="8" DockPanel.Dock="Top"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="txtSource" 
                             AcceptsReturn="True" AcceptsTab="True"
                             FontFamily="Consolas" FontSize="14"
                             TextWrapping="NoWrap"
                             Foreground="White" Background="#1E1E1E"
                             BorderThickness="0" Padding="10"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Panel de Resultados -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tokens -->
            <GroupBox Header="Tokens" Foreground="White" Margin="0,0,0,5"
                      FontWeight="Bold" BorderBrush="#444" BorderThickness="1" Background="#252526">
                <DataGrid x:Name="dgTokens" AutoGenerateColumns="True" 
                          HeadersVisibility="Column" FontFamily="Consolas" 
                          Foreground="White" Background="#1E1E1E"
                          BorderThickness="0" 
                          AlternatingRowBackground="#2D2D30"/>
            </GroupBox>

            <!-- IR -->
            <GroupBox Header="Código Intermedio (IR)" Foreground="White" Grid.Row="1" Margin="0,5,0,5"
                      FontWeight="Bold" BorderBrush="#444" BorderThickness="1" Background="#252526">
                <DataGrid x:Name="dgIr" AutoGenerateColumns="True" 
                          HeadersVisibility="Column" FontFamily="Consolas" 
                          Foreground="White" Background="#1E1E1E"
                          BorderThickness="0" 
                          AlternatingRowBackground="#2D2D30"/>
            </GroupBox>

            <!-- SVG Generado -->
            <GroupBox Header="Código SVG Generado" Foreground="White" Grid.Row="2" Margin="0,5,0,5"
                      FontWeight="Bold" BorderBrush="#444" BorderThickness="1" Background="#252526">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="5">
                        <TextBox x:Name="txtSvg"
                                 FontFamily="Consolas" FontSize="13"
                                 Foreground="White" Background="#1E1E1E"
                                 TextWrapping="NoWrap"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 AcceptsReturn="True"/>
                    </ScrollViewer>

                    <!-- Vista Previa SVG -->
                    <Border Grid.Column="1" Margin="5" BorderBrush="#555" BorderThickness="1" CornerRadius="4">
                        <WebBrowser x:Name="svgView"/>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Errores -->
            <GroupBox Header="Errores / Diagnósticos" Foreground="White" Grid.Row="3"
                      FontWeight="Bold" BorderBrush="#444" BorderThickness="1" Background="#252526">
                <ListBox x:Name="lstErrors" 
                         FontFamily="Consolas" FontSize="13"
                         Foreground="#F48771" Background="#1E1E1E"
                         BorderThickness="0"/>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
